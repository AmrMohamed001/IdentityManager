@if (User.Identity.IsAuthenticated == true)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="#">Welcome @User.Identity.Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="auth" asp-action="logout">Logout</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="auth" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="auth" asp-action="SignIn">Login</a>
        </li>
    </ul>
}
