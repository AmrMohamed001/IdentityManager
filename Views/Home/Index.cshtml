
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @if (User.Identity.IsAuthenticated)
    {

        var TwoFEnable = ViewData["TwoFEnable"];
        if (TwoFEnable != null && TwoFEnable.ToString().ToLower() == "true")
        {
            <a asp-action="DisableAuthenticator" asp-controller="account">Disable your 2FA</a>
        }
        else
        {
            <a asp-action="EnableAuthenticator" asp-controller="account">Setup your 2FA</a>
        }

        if (User.IsInRole(RolesEnum.Admin.ToString()))
        {
            <p class="text-success">Welcome - Admin</p>
        }
        else
        {
            <p class="text-success">Welcome - User</p>
        }

    }
    else
    {
        <p class="text-success">Welcome - Guest</p>
    }
    
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
