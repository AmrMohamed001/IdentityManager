@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    SelectList optionsList = new SelectList(ViewBag.roles, "Id", "Name");
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%; border-radius: 10px; background: #f9f9f9;">
        <h2 class="text-center mb-4" style="font-family: 'Segoe UI', sans-serif; color: #333;">Create an Account</h2>
        <form asp-action="Register" asp-route-redirect="@ViewData["returnurl"]">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label" style="color: #555;">Full Name</label>
                <input asp-for="Name" class="form-control shadow-sm" style="border-radius: 5px;" placeholder="Enter your full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label" style="color: #555;">Email Address</label>
                <input asp-for="Email" class="form-control shadow-sm" style="border-radius: 5px;" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label" style="color: #555;">Password</label>
                <input asp-for="Password" type="password" class="form-control shadow-sm" style="border-radius: 5px;" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label" style="color: #555;">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control shadow-sm" style="border-radius: 5px;" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RoleId" class="form-label" style="color: #555;">Role</label>
                <select asp-for="RoleId" asp-items="optionsList" class="form-select shadow-sm" style="border-radius: 5px;" required>
                    <option value="0">--Select Role--</option>
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <input type="submit" value="Register" class="btn btn-primary shadow-sm" style="border-radius: 5px; background-color: #007bff; border: none;" />
            </div>
        </form>
        <div class="mt-4 text-center">
            <p style="color: #555;">Already have an account? <a asp-controller="account" asp-action="login" asp-route-redirect="@ViewData["returnurl"]" class="text-primary" style="text-decoration: none;">Login here</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
