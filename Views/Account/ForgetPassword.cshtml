@model Role_Identity.Models.ViewModels.ForgetPasswordViewModel

@{
    ViewData["Title"] = "Forget Password";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 10px; background: #f9f9f9;">
        <h2 class="text-center mb-4" style="font-family: 'Segoe UI', sans-serif; color: #333;">Reset Password</h2>
        <form asp-action="ForgetPassword" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label" style="color: #555;">Email Address</label>
                <input asp-for="Email" class="form-control shadow-sm" style="border-radius: 5px;" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <input type="submit" value="Verify" class="btn btn-primary shadow-sm" style="border-radius: 5px; background-color: #007bff; border: none;" />
            </div>
        </form>
        <div class="mt-4 text-center">
            <a asp-action="Index" class="text-primary" style="text-decoration: none;">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
