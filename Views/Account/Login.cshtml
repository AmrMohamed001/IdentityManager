@model Role_Identity.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%; border-radius: 10px; background: #f9f9f9;">
        <h2 class="text-center mb-4" style="font-family: 'Segoe UI', sans-serif; color: #333;">Welcome Back!</h2>
        <form asp-action="Login" asp-route-redirect="@ViewData["returnurl"]">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label" style="color: #555;">Email Address</label>
                <input asp-for="Email" class="form-control shadow-sm" style="border-radius: 5px;" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label" style="color: #555;">Password</label>
                <input asp-for="Password" type="password" class="form-control shadow-sm" style="border-radius: 5px;" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-4">
                <input class="form-check-input" asp-for="RememberMe" id="rememberMe" />
                <label class="form-check-label" for="rememberMe" style="color: #555;">@Html.DisplayNameFor(model => model.RememberMe)</label>
            </div>
            <div class="d-grid">
                <input type="submit" value="Login" class="btn btn-primary shadow-sm" style="border-radius: 5px; background-color: #007bff; border: none;" />
            </div>
        </form>
        <div class="mt-4 text-center">
            <p style="color: #555;">Don't have an account? <a asp-controller="account" asp-action="register" asp-route-redirect="@ViewData["returnurl"]" class="text-primary" style="text-decoration: none;">Register here</a></p>
            <p style="color: #555;"><a asp-controller="account" asp-action="ForgetPassword" class="text-primary" style="text-decoration: none;">Forgot your password?</a></p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
